{
	"name": "lint-staged-type",
	"version": "0.1.0",
	"private": false,
	"description": "Run lint commands against file types",
	"repository": "https://github.com/ahawkins/lint-staged-type",
	"license": "MIT",
	"author": "Adam Hawkins",
	"main": "lib/index.js",
	"bin": {
		"lint-staged-type-unknown-linter": "bin/lint-staged-type-unknown-linter"
	},
	"scripts": {
		"test": "jest",
		"test:debug": "env DEBUG=lint-staged-type jest"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"dependencies": {
		"chalk": "^4.1.0",
		"cosmiconfig": "^7.0.0",
		"debug": "^4.3.1",
		"micromatch": "^4.0.2"
	},
	"devDependencies": {
		"eslint": "^7.20.0",
		"eslint-config-prettier": "^7.2.0",
		"husky": "^4.3.0",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.2",
		"prettier": "^2.2.1",
		"prettier-plugin-sh": "^0.6.0",
		"sort-package-json": "^1.48.1",
		"tmp": "^0.2.1"
	},
	"lint-staged-type": {
		"strict": true,
		"ignore": [
			"*.md"
		],
		"linters": {
			"package": {
				"command": "sort-package-json",
				"match": "package.json"
			},
			"shell": {
				"command": "shellcheck",
				"match": "*.sh",
				"shebang": "#!/usr/bin/env bash"
			},
			"node": {
				"command": "eslint --fix",
				"match": "*.js",
				"shebang": "#!/usr/bin/env node"
			}
		}
	}
}
